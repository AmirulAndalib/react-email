{
  "extends": "tsconfig/react-library.json",
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "module": "CommonJS",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
